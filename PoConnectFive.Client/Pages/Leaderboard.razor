@page "/leaderboard"
@using PoConnectFive.Shared.Models
@using PoConnectFive.Client.Services
@inject IPlayerDataService PlayerDataService
@inject NavigationManager NavigationManager
@implements IDisposable

<PageTitle>Connect Five - Leaderboard</PageTitle>

<div class="leaderboard-container">
    <div class="leaderboard-header">
        <button class="btn-back" @onclick="NavigateToMenu">
            <span>‚Üê</span> Back to Menu
        </button>
        <h1>Leaderboard</h1>
        <div class="filter-controls">
            <select @bind="SortCriteria" class="filter-select">
                <option value="winrate">Win Rate</option>
                <option value="wins">Total Wins</option>
                <option value="games">Games Played</option>
                <option value="streak">Best Streak</option>
            </select>
        </div>
    </div>

    @if (_loading)
    {
        <div class="loading-spinner">
            <div class="spinner"></div>
            <p>Loading rankings...</p>
        </div>
    }
    else if (_players == null || !_players.Any())
    {
        <div class="no-data">
            <p>No player data available yet. Start playing to appear on the leaderboard!</p>
            <button class="btn-primary" @onclick="NavigateToMenu">Start Playing</button>
        </div>
    }
    else
    {
        <div class="leaderboard-table">
            <div class="table-header">
                <div class="rank">#</div>
                <div class="player">Player</div>
                <div class="stat">Win Rate</div>
                <div class="stat">Wins</div>
                <div class="stat">Games</div>
                <div class="stat">Best Streak</div>
            </div>

            @foreach (var (player, index) in _players.Select((p, i) => (p, i)))
            {
                <div class="table-row @(index < 3 ? $"top-{index + 1}" : "")">
                    <div class="rank">@(index + 1)</div>
                    <div class="player">
                        <span class="player-name">@player.PlayerName</span>
                        <span class="last-played">Last played: @player.LastPlayed.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="stat">@($"{player.WinRate:F1}%")</div>
                    <div class="stat">@player.Wins</div>
                    <div class="stat">@player.GamesPlayed</div>
                    <div class="stat">@player.BestWinStreak</div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<PlayerStats>? _players;
    private bool _loading = true;
    private string SortCriteria { get; set; } = "winrate";

    protected override async Task OnInitializedAsync()
    {
        PlayerDataService.OnDataChanged += StateHasChanged;
        await LoadLeaderboard();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (_players != null)
        {
            SortPlayers();
        }
    }

    private async Task LoadLeaderboard()
    {
        try
        {
            _loading = true;
            _players = await PlayerDataService.GetTopPlayers();
            SortPlayers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading leaderboard: {ex.Message}");
            _players = new List<PlayerStats>();
        }
        finally
        {
            _loading = false;
        }
    }

    private void SortPlayers()
    {
        if (_players == null) return;

        _players = SortCriteria switch
        {
            "winrate" => _players.OrderByDescending(p => p.WinRate).ToList(),
            "wins" => _players.OrderByDescending(p => p.Wins).ToList(),
            "games" => _players.OrderByDescending(p => p.GamesPlayed).ToList(),
            "streak" => _players.OrderByDescending(p => p.BestWinStreak).ToList(),
            _ => _players
        };
    }

    private void NavigateToMenu()
    {
        NavigationManager.NavigateTo("/");
    }

    public void Dispose()
    {
        PlayerDataService.OnDataChanged -= StateHasChanged;
    }
}

