@page "/settings"
@using PoConnectFive.Client.Services
@inject ILocalStorageService LocalStorage
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Connect Five - Settings</PageTitle>

<div class="settings-container">
    <div class="settings-header">
        <button class="btn-back" @onclick="NavigateToMenu">
            <span>‚Üê</span> Back to Menu
        </button>
        <h1>Settings</h1>
    </div>

    <div class="settings-content">
        <div class="settings-section">
            <h2>Game Data</h2>
            <div class="setting-item">
                <button class="btn-danger" @onclick="ResetGameData">Reset All Game Data</button>
                <p class="setting-description">This will clear all player statistics and game history</p>
            </div>
        </div>
    </div>

    <div class="settings-footer">
        <button class="btn-secondary" @onclick="NavigateToMenu">Cancel</button>
        <button class="btn-primary" @onclick="SaveSettings">Save Changes</button>
    </div>
</div>

@code {
    private GameSettingsData GameSettings { get; set; } = new();
    private GameSettingsData OriginalSettings { get; set; } = new();
    private const string SETTINGS_KEY = "gameSettings";

    protected override async Task OnInitializedAsync()
    {
        var savedSettings = await LocalStorage.GetItem<GameSettingsData>(SETTINGS_KEY);
        if (savedSettings != null)
        {
            GameSettings = savedSettings;
            OriginalSettings = new GameSettingsData
                {
                    Theme = savedSettings.Theme,
                    Player1Color = savedSettings.Player1Color,
                    Player2Color = savedSettings.Player2Color,
                    HighContrastEnabled = savedSettings.HighContrastEnabled,
                    ScreenReaderEnabled = savedSettings.ScreenReaderEnabled,
                    AnimationSpeed = savedSettings.AnimationSpeed
                };
        }
    }

    private async Task SaveSettings()
    {
        await LocalStorage.SetItem(SETTINGS_KEY, GameSettings);
        await JSRuntime.InvokeVoidAsync("alert", "Settings saved successfully!");
        NavigateToMenu();
    }

    private async Task ResetGameData()
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm",
            "Are you sure you want to reset all game data? This cannot be undone."))
        {
            await LocalStorage.Clear();
            NavigateToMenu();
        }
    }

    private void NavigateToMenu()
    {
        NavigationManager.NavigateTo("/");
    }

    private class GameSettingsData
    {
        public string Theme { get; set; } = "classic";
        public string Player1Color { get; set; } = "#FF0000";
        public string Player2Color { get; set; } = "#FFFF00";
        public bool HighContrastEnabled { get; set; }
        public bool ScreenReaderEnabled { get; set; }
        public string AnimationSpeed { get; set; } = "normal";
    }
}

