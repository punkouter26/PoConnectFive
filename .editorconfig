# EditorConfig for PoConnectFive
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
# Suppress StyleCop rules that are too strict for this project
dotnet_diagnostic.SA0001.severity = none  # XML comment analysis disabled
dotnet_diagnostic.SA1101.severity = none  # Prefix local calls with this
dotnet_diagnostic.SA1116.severity = none  # Parameters should begin on line after declaration
dotnet_diagnostic.SA1117.severity = none  # Parameters should be on same line or each on own line
dotnet_diagnostic.SA1124.severity = none  # Do not use regions
dotnet_diagnostic.SA1201.severity = none  # Element ordering
dotnet_diagnostic.SA1202.severity = none  # Public members before private
dotnet_diagnostic.SA1203.severity = none  # Constant fields before non-constant
dotnet_diagnostic.SA1309.severity = none  # Field should not begin with underscore
dotnet_diagnostic.SA1316.severity = none  # Tuple element names casing
dotnet_diagnostic.SA1402.severity = none  # File may only contain single type
dotnet_diagnostic.SA1407.severity = none  # Arithmetic expressions should declare precedence
dotnet_diagnostic.SA1413.severity = none  # Use trailing comma in multi-line initializers
dotnet_diagnostic.SA1512.severity = none  # Single-line comments followed by blank line
dotnet_diagnostic.SA1513.severity = none  # Closing brace followed by blank line
dotnet_diagnostic.SA1515.severity = none  # Single-line comment preceded by blank line
dotnet_diagnostic.SA1516.severity = none  # Elements separated by blank line
dotnet_diagnostic.SA1517.severity = none  # Blank lines at start of file
dotnet_diagnostic.SA1518.severity = none  # File should end with newline
dotnet_diagnostic.SA1633.severity = none  # File header XML
dotnet_diagnostic.SA1649.severity = none  # File name should match first type name

# Suppress SonarAnalyzer rules (make them suggestions, not errors)
dotnet_diagnostic.S101.severity = suggestion   # Pascal case naming
dotnet_diagnostic.S125.severity = suggestion   # Commented out code
dotnet_diagnostic.S1144.severity = suggestion  # Unused private method
dotnet_diagnostic.S1172.severity = suggestion  # Unused parameter
dotnet_diagnostic.S1481.severity = suggestion  # Unused local variable
dotnet_diagnostic.S2325.severity = suggestion  # Make method static
dotnet_diagnostic.S2953.severity = suggestion  # Dispose method confusion
dotnet_diagnostic.S3260.severity = suggestion  # Private class should be sealed
dotnet_diagnostic.S3267.severity = suggestion  # Simplify using LINQ
dotnet_diagnostic.S3358.severity = suggestion  # Nested ternary
dotnet_diagnostic.S4136.severity = suggestion  # Method overloads should be adjacent
dotnet_diagnostic.S4487.severity = suggestion  # Unread private field
dotnet_diagnostic.S6608.severity = suggestion  # Use indexing instead of First()
dotnet_diagnostic.S6966.severity = suggestion  # Await async methods

# Suppress C# compiler warnings
dotnet_diagnostic.CS0414.severity = suggestion  # Field assigned but never used

[*.{json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
