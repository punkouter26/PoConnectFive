@namespace PoConnectFive.Server.Components

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport"
        content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes, viewport-fit=cover" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="PoConnectFive" />
    <meta name="theme-color" content="#007bff" />
    <meta name="description"
        content="A modern Connect Five game with AI opponents. Challenge yourself against Easy, Medium, or Hard difficulty!" />

    <title>PoConnectFive - Connect Five Game</title>
    <base href="/" />

    <!-- Icons -->
    <link rel="icon" type="image/png" href="favicon.png" />
    <link rel="apple-touch-icon" href="icon-192.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="icon-192.png" />
    <link rel="apple-touch-icon" sizes="512x512" href="icon-512.png" />

    <!-- PWA Manifest -->
    <link rel="manifest" href="manifest.json" />

    <!-- Stylesheets -->
    <link rel="stylesheet" href="css/variables.css" />
    <link rel="stylesheet" href="css/app.css" />
    <link rel="stylesheet" href="css/glassmorphism.css" />
    <link rel="stylesheet" href="css/mobile.css" />
    <link rel="stylesheet" href="css/animations.css" />
    <link rel="stylesheet" href="css/micro-interactions.css" />
    <link rel="stylesheet" href="css/accessibility.css" />
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/standard-base.css" />
    <link rel="stylesheet" href="_content/Microsoft.FluentUI.AspNetCore.Components/css/reboot.css" />
    <link rel="stylesheet" href="Po.ConnectFive.Api.styles.css" />

    <HeadOutlet @rendermode="InteractiveWebAssembly" />
</head>

<body>
    <a href="#main-content" class="skip-to-content">Skip to main content</a>

    <PoConnectFive.Client.Routes @rendermode="InteractiveWebAssembly" />

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <script src="_framework/blazor.web.js"></script>
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
    <script src="js/accessibility.js"></script>
    <script src="js/gameBoard.js"></script>

    <style>
        /* Error UI styles */
        #blazor-error-ui {
            background: #ffffe0;
            bottom: 0;
            box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.2);
            display: none;
            left: 0;
            padding: 0.6rem 1.25rem;
            position: fixed;
            width: 100%;
            z-index: 1000;
            color: #333;
        }

        #blazor-error-ui .dismiss {
            cursor: pointer;
            position: absolute;
            right: 0.75rem;
            top: 0.5rem;
        }
    </style>
</body>

</html>