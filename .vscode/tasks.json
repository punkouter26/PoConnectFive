{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/PoConnectFive.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/PoConnectFive.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/src/Po.ConnectFive.Api/Po.ConnectFive.Api.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "run",
			"command": "dotnet",
			"type": "process",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/src/Po.ConnectFive.Api/Po.ConnectFive.Api.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "run-apphost",
			"type": "shell",
			"command": "dotnet run --project src/PoConnectFive.AppHost/PoConnectFive.AppHost.csproj",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}