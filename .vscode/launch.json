{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/PoConnectFive.Server/bin/Debug/net9.0/PoConnectFive.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PoConnectFive.Server",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Client",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/PoConnectFive.Client"
        }
    ],
    "compounds": [
        {
            "name": "Server + Client",
            "configurations": ["Server", "Client"]
        }
    ]
} 